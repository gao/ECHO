<script id="tmpl-RunUserTaskView" type="text/html">
	<div class="RunUserTaskView">
         <div class="RunUserTaskView-content">  
         
        	<div class="study-title">
        		<span>{{:study.name}}</span>
        	</div>
        	
        	<div class="task-content">
        		{{if task}}
					<div class="questionTitle">{{:task.questionTitle}}</div>
					<div class="info">
						{{if task.questionType == "string"}}
							<div class="btn-group result-content">
	 							<textarea rows="4" name="answer"></textarea>
	 						</div>
						{{else task.questionType == "true-false"}}
							<div class="btn-group result-content">
	 							<button data-val="true" class="btn">True</button>
	  							<button data-val="false" class="btn">False</button>
	 						</div>
						{{else task.questionType == "rating-5points"}}
	 						<div class="btn-group result-content">
	 							<button data-val="1" class="btn">1</button>
	  							<button data-val="2" class="btn">2</button>
	  							<button data-val="3" class="btn">3</button>
	  							<button data-val="4" class="btn">4</button>
	  							<button data-val="5" class="btn">5</button>
	 						</div>
						{{else task.questionType == "rating-10points"}}
							<div class="btn-group result-content points10">
	 							<button data-val="1" class="btn">1</button>
	  							<button data-val="2" class="btn">2</button>
	  							<button data-val="3" class="btn">3</button>
	  							<button data-val="4" class="btn">4</button>
	  							<button data-val="5" class="btn">5</button>
	  							<button data-val="6" class="btn">6</button>
	  							<button data-val="7" class="btn">7</button>
	  							<button data-val="8" class="btn">8</button>
	  							<button data-val="9" class="btn">9</button>
	  							<button data-val="10" class="btn">10</button>
	  						</div>
						{{/if}}
					</div>
				{{/if}}
        	</div>
        </div>
        
        <div class="RunUserTaskView-footer"> 
        	<button class="btns btnNext">Next</button>
        <div>
        
	</div>  
</script>

